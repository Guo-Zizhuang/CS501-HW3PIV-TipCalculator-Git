<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">


    <Button
        android:id="@+id/Button_Two"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:layout_marginStart="4dp"
        android:layout_marginTop="32dp"
        android:text="2"
        app:layout_constraintStart_toEndOf="@+id/Button_One"
        app:layout_constraintTop_toBottomOf="@+id/num_show" />

    <Button
        android:id="@+id/Button_Baseline"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:layout_marginTop="260dp"
        android:text="_"
        app:layout_constraintEnd_toEndOf="@+id/edtOp2"
        app:layout_constraintHorizontal_bias="0.36"
        app:layout_constraintStart_toStartOf="@+id/edtOp2"
        app:layout_constraintTop_toBottomOf="@+id/edtOp2" />

    <Button
        android:id="@+id/Button_Seven"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:layout_marginTop="12dp"
        android:layout_marginEnd="4dp"
        android:text="7"
        app:layout_constraintEnd_toStartOf="@+id/Button_Eight"
        app:layout_constraintTop_toBottomOf="@+id/Button_Four" />

    <Button
        android:id="@+id/Button_Three"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:layout_marginTop="84dp"
        android:text="3"
        app:layout_constraintEnd_toEndOf="@+id/edtOp2"
        app:layout_constraintHorizontal_bias="0.36"
        app:layout_constraintStart_toStartOf="@+id/edtOp2"
        app:layout_constraintTop_toBottomOf="@+id/edtOp2" />

    <Button
        android:id="@+id/Button_Nine"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:layout_marginTop="208dp"
        android:text="9"
        app:layout_constraintEnd_toEndOf="@+id/edtOp2"
        app:layout_constraintHorizontal_bias="0.36"
        app:layout_constraintStart_toStartOf="@+id/edtOp2"
        app:layout_constraintTop_toBottomOf="@+id/edtOp2" />

    <Button
        android:id="@+id/Button_Six"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:layout_marginStart="4dp"
        android:layout_marginTop="8dp"
        android:text="6"
        app:layout_constraintStart_toEndOf="@+id/Button_Five"
        app:layout_constraintTop_toBottomOf="@+id/Button_Three" />

    <Button
        android:id="@+id/Button_One"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:layout_marginTop="32dp"
        android:text="1"
        app:layout_constraintStart_toStartOf="@+id/Tip"
        app:layout_constraintTop_toBottomOf="@+id/Total" />

    <Button
        android:id="@+id/Button_Five"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:layout_marginStart="4dp"
        android:layout_marginTop="8dp"
        android:text="5"
        app:layout_constraintStart_toEndOf="@+id/Button_Four"
        app:layout_constraintTop_toBottomOf="@+id/Button_Two" />

    <Button
        android:id="@+id/Button_minus"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:layout_marginTop="84dp"
        android:layout_marginRight="4dp"
        android:text="-"
        app:layout_constraintEnd_toEndOf="@+id/edtOp2"
        app:layout_constraintHorizontal_bias="0.746"
        app:layout_constraintStart_toStartOf="@+id/edtOp2"
        app:layout_constraintTop_toBottomOf="@+id/edtOp2" />

    <Button
        android:id="@+id/Button_coma"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:layout_marginTop="144dp"
        android:text=","
        app:layout_constraintEnd_toEndOf="@+id/edtOp2"
        app:layout_constraintHorizontal_bias="0.726"
        app:layout_constraintStart_toStartOf="@+id/edtOp2"
        app:layout_constraintTop_toBottomOf="@+id/edtOp2" />

    <Button
        android:id="@+id/Button_Clear"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:layout_marginTop="208dp"
        android:text="C"
        app:layout_constraintEnd_toEndOf="@+id/edtOp2"
        app:layout_constraintHorizontal_bias="0.726"
        app:layout_constraintStart_toStartOf="@+id/edtOp2"
        app:layout_constraintTop_toBottomOf="@+id/edtOp2" />


    <Button
        android:id="@+id/Button_Null"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:layout_marginTop="260dp"
        android:text="0"
        app:layout_constraintEnd_toEndOf="@+id/edtOp2"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="@+id/edtOp2"
        app:layout_constraintTop_toBottomOf="@+id/edtOp2" />

    <Button
        android:id="@+id/Button_Four"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:layout_marginTop="8dp"
        android:text="4"
        app:layout_constraintStart_toStartOf="@+id/Button_One"
        app:layout_constraintTop_toBottomOf="@+id/Button_One" />


    <Button
        android:id="@+id/Button_Equal"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:layout_marginTop="260dp"
        android:text="="
        app:layout_constraintEnd_toEndOf="@+id/edtOp2"
        app:layout_constraintHorizontal_bias="0.726"
        app:layout_constraintStart_toStartOf="@+id/edtOp2"
        app:layout_constraintTop_toBottomOf="@+id/edtOp2" />

    <Button
        android:id="@+id/Button_point"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:layout_marginTop="4dp"
        android:text="."
        app:layout_constraintStart_toStartOf="@+id/Button_Seven"
        app:layout_constraintTop_toBottomOf="@+id/Button_Seven" />

    <Button
        android:id="@+id/Button_Eight"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:layout_marginTop="208dp"
        android:text="8"
        app:layout_constraintEnd_toEndOf="@+id/edtOp2"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="@+id/edtOp2"
        app:layout_constraintTop_toBottomOf="@+id/edtOp2" />

    <TextView
        android:id="@+id/enter_Amount"
        android:layout_width="260dp"
        android:layout_height="50dp"
        android:layout_marginBottom="28dp"
        android:ems="10"
        android:gravity="center"
        android:inputType="textPersonName"
        android:background="#BCAEAE"
        android:text=""
        android:textColor="@color/black"
        android:textSize="20dp"
        app:layout_constraintBottom_toTopOf="@+id/edtOp2"
        app:layout_constraintStart_toStartOf="@+id/tip_percent" />

    <TextView
        android:id="@+id/Tip"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:layout_marginTop="100dp"
        android:ems="10"
        android:gravity="center"
        android:inputType="textPersonName"
        android:text="Tip"
        android:textColor="@color/black"
        android:textSize="20dp"
        app:layout_constraintEnd_toStartOf="@+id/edtOp2"
        app:layout_constraintHorizontal_bias="0.957"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/Total"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:layout_marginTop="4dp"
        android:layout_marginEnd="4dp"
        android:ems="10"
        android:gravity="center"
        android:inputType="textPersonName"
        android:text="Total"
        android:textColor="@color/black"
        android:textSize="20dp"
        app:layout_constraintEnd_toStartOf="@+id/num_show"
        app:layout_constraintTop_toBottomOf="@+id/Tip" />

    <TextView
        android:id="@+id/tip_percent"
        android:layout_width="50dp"
        android:layout_height="25dp"
        android:layout_marginTop="72dp"
        android:ems="10"
        android:gravity="center"
        android:inputType="textPersonName"
        android:text="15%"
        android:textColor="@color/black"
        android:textSize="20dp"
        app:layout_constraintEnd_toStartOf="@+id/edtOp2"
        app:layout_constraintHorizontal_bias="0.957"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <SeekBar
        android:id="@+id/tip_SeekBar"
        android:layout_width="200dp"
        android:layout_height="25dp"
        android:layout_marginTop="56dp"
        android:max="30"
        android:progress="15"
        app:layout_constraintBottom_toTopOf="@+id/edtOp2"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.687"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="1.0" />

    <TextView
        android:id="@+id/edtOp2"
        android:layout_width="200dp"
        android:layout_height="50dp"
        android:layout_marginTop="100dp"
        android:ems="10"
        android:inputType="textPersonName"
        android:text="$0.00"
        android:textColor="@color/black"
        android:textSize="20dp"
        android:gravity="center_vertical"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.687"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/num_show"
        android:layout_width="200dp"
        android:layout_height="50dp"
        android:layout_marginTop="4dp"
        android:ems="10"
        android:inputType="textPersonName"
        android:text="$0.00"
        android:textColor="@color/black"
        android:textSize="20dp"
        android:gravity="center_vertical"
        app:layout_constraintEnd_toEndOf="@+id/edtOp2"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="@+id/edtOp2"
        app:layout_constraintTop_toBottomOf="@+id/edtOp2" />



</androidx.constraintlayout.widget.ConstraintLayout>